<div class="button--double form-general-submit answer-questionnaire__submit">
  <% if first_step? %>
    <a></a>
  <% else %>
    <%= link_to(
      icon("caret-left", class: "icon--small", role: "img", "aria-hidden": true) + " " + t("decidim.forms.step_navigation.show.back"),
      "#",
      class: "hollow secondary js--one-step-back",
      data: {
        toggle: [previous_step_dom_id, current_step_dom_id].join(" ")
      }
    ) %>
  <% end %>

  <% if last_step? %>
    <%= form.submit(
      t("decidim.forms.step_navigation.show.submit"),
      class: "button button--sc js--submit",
      disabled: button_disabled?,
      data: {
        disable: true
      }
    ) %>
  <% else %>
    <div>
      <span class="fieldset-error js--step-empty--fields hide">
        <%= t(".warning_empty_fieds") %>
      </span>

      <%= link_to(
        t("decidim.forms.step_navigation.show.continue"),
        "#",
        class: "button button--sc js--one-step-beyond",
        data: {
          toggle: [next_step_dom_id, current_step_dom_id].join(" "),
          "text-continue": "#{ t("decidim.forms.step_navigation.show.continue") }",
          "text-wait": "#{ t("decidim.forms.step_navigation.wait") }"
        }
      ) %>
    </div>
  <% end %>
</div>
