<div class="column medium-6" data-relevance="<%= model.score %>" data-matching="<%= model.matching %>">
  <div class="card">
    <div class="row card-section">
      <div class="column small-3">
        <% if model.avatar.attached? %>
          <%= image_tag model.avatar_thumb_path, alt: "Avatar for #{title}" %>
        <% else %>
          <%= image_pack_tag "media/images/default-avatar.svg", alt: "member-avatar" %>
        <% end %>
      </div>

      <div class="column small-9">
        <h4><%= title %></h4>

        <h5><%= subtitle %></h5>

        <%= description %>

        <p>
          Effort: <%= effort %>
        </p>

        <p class="text-small">
          key words: <strong><%= key_words %></strong>
        </p>
      </div>
    </div>
  </div>
</div>
